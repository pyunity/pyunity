"""Class to represent a rotation in 3D space."""

__all__ = ["Quaternion", "QuaternionDiff"]

from typing import Any, Iterator, List, Tuple, Union
from .vector import Vector3
from .other import LockedLiteral

class Quaternion(LockedLiteral):
    w: float
    x: float
    y: float
    z: float
    def __init__(self, w: float, x: float, y: float, z: float) -> None: ...
    def __repr__(self) -> str: ...
    def __str__(self) -> str: ...
    def __getitem__(self, i: int) -> float: ...
    def __iter__(self) -> Iterator[float]: ...
    def __list__(self) -> List[float]: ...
    def __len__(self) -> int: ...
    def __hash__(self) -> int: ...
    def __eq__(self, other: Any) -> bool: ...
    def __ne__(self, other: Any) -> bool: ...
    def __mul__(self, other: Quaternion) -> Quaternion: ...
    def __truediv__(self, other: Union[float, int]) -> Quaternion: ...
    def __sub__(self, other: Quaternion) -> QuaternionDiff: ...
    def absDiff(self, other: Quaternion) -> float: ...
    def copy(self) -> Quaternion: ...
    def normalized(self) -> Quaternion: ...
    def RotateVector(self, vector: Vector3) -> Vector3: ...
    def SetBackward(self, value: Vector3) -> None: ...

    @staticmethod
    def FromAxis(angle: float, a: Vector3) -> Quaternion: ...
    @staticmethod
    def Euler(vector: Vector3) -> Quaternion: ...
    @staticmethod
    def identity() -> Quaternion: ...
    @staticmethod
    def Between(v1: Vector3, v2: Vector3) -> Quaternion: ...
    @staticmethod
    def FromDir(v: Vector3) -> Quaternion: ...

    @property
    def conjugate(self) -> Quaternion: ...
    @property
    def angleAxisPair(self) -> Tuple[float, Vector3]: ...
    @angleAxisPair.setter
    def angleAxisPair(self, value: Tuple[float, Vector3]) -> None: ...
    @property
    def eulerAngles(self) -> Vector3: ...
    @eulerAngles.setter
    def eulerAngles(self, value: Vector3) -> None: ...

class QuaternionDiff:
    w: float
    x: float
    y: float
    z: float
    def __init__(self, w: float, x: float, y: float, z: float) -> None: ...
    def __abs__(self) -> float: ...
